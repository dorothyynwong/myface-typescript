<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body id="postBody">
    <button onclick="changeBackground()">Change Color</button>
    <div class="parent">
        <% postList.results.forEach(function(post) {%>
        <div class="child">                           
            <img src="<%= post.imageUrl %>" alt="image in the post <%= post.id %>"/>
            <div class="childText">
            <div class="postedBy"><%= post.postedBy.username %></div>
            <div class="createdAt"><%= format(post.createdAt, "yyyy-MM-dd") %> </div>
            <p class="message"><%= post.message %></p>   
            </div>
            <div class="LikeDislike">
                <div>
                    <!-- <p>Liked By: 
                        <ul><% post.likedBy.forEach(function(likedBy) {%>
                            <li><%=likedBy.name %></li>
                            <% }); %> 
                        </ul>
                    </p> -->
                    <div id="like-count-<%= post.id %>"><%=post.likedBy.length %></div> Likes
                </div>
                <div>
                    <!-- <p>Disliked By: 
                        <ul><% post.dislikedBy.forEach(function(dislikedBy) {%> 
                            <li><%=dislikedBy.name %></li>
                            <% }); %>
                        </ul>
                    </p> -->
                    <div id="dislike-count-<%= post.id %>"><%=post.dislikedBy.length %></div> Dislikes
                </div>
            </div>
            <div class="buttonBox">
                <div>
                    <!-- <form id="like-form-<%= post.id %>" method="post" action="/posts/<%= post.id %>/like/"> -->
                    <form id="like-form-<%= post.id %>">
                        <button type="submit" id="like-button-<%= post.id%>">Like</button>
                    </form>
                </div>
                <div>
                    <!-- <form id="dislike-form-<%= post.id %>" method="post" action="/posts/<%= post.id %>/dislike/"> -->
                    <form id="dislike-form-<%= post.id %>">
                        <button type="submit">Dislike</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <%if (postList.next) { %>
        <a href="<%= postList.next %>">Next</a>
    <% } %>
    <%if (postList.previous) { %>
        <a href="<%= postList.previous %>">Previous</a>
    <% } %>
</body>
<%- include('_footer') -%>
</html>

