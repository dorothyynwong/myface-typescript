<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Create User</h1>
<form id="createUserForm" method="post" action="/users/create">
    <label>
        Name:
        <input class="createUserInput" type="text" name="name" onchange="checkAllInput()" required/>
    </label>
    <label>
        Username:
        <input class="createUserInput" type="text" name="username" onchange="checkAllInput()" pattern="[a-z0-9]+" required/>
    </label>
    <label>
        Email:
        <input class="createUserInput" type="email" name="email" onchange="checkAllInput()" required/>
    </label>
    <label>
        ProfileImageUrl:
        <input class="createUserInput" type="text" name="profileImageUrl" onchange="checkAllInput()" required/>
    </label>
    <label>
        CoverImageUrl:
        <input class="createUserInput" type="text" name="coverImageUrl" onchange="checkAllInput()" required/>
    </label>
    <!-- <button type="submit" class="createUserSubmitHidden" id="createUserSubmitID">Submit</button> -->
    <button type="submit" class="createUserSubmit" id="createUserSubmitID" disabled>Submit</button>
</form>
</body>
<%- include('_footer') -%>
</html>